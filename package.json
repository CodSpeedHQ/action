{
  "name": "@codspeed/action",
  "version": "1.0.2",
  "private": true,
  "description": " Github Actions for running CodSpeed in the CI",
  "main": "lib/main.js",
  "scripts": {
    "build": "pnpm build:tsc && pnpm build:package",
    "build:tsc": "tsc --noEmit",
    "build:package": "esbuild --platform=node --bundle --sourcemap src/main.ts --define:process.env.VERSION=\\\"v$npm_package_version\\\" --minify --outfile=dist/index.js",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "release:prechecks": "pnpm format-check && pnpm lint && pnpm build && git diff --exit-code",
    "release:bump": "pnpm version patch --git-tag-version=false && pnpm build",
    "release:tags": "git tag -fa v$npm_package_version -m \"v$npm_package_version\" && git tag -fa v1 -m \"Update major\"  && git push -f origin v1 && git push origin v$npm_package_version",
    "release:github": "gh release create v$npm_package_version -d --title \"v$npm_package_version\" --notes \"Release v$npm_package_version\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodSpeedHQ/action.git"
  },
  "keywords": [
    "actions",
    "codspeed",
    "performance",
    "benchmarking"
  ],
  "author": "CodSpeed",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@actions/http-client": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.0",
    "@typescript-eslint/parser": "^4.33.0",
    "esbuild": "^0.15.13",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^27.1.4",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4"
  }
}
